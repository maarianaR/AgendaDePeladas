<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
android:paddingRight="@dimen/activity_horizontal_margin"
android:paddingTop="@dimen/activity_vertical_margin"
android:paddingBottom="@dimen/activity_vertical_margin"
app:layout_behavior="@string/appbar_scrolling_view_behavior"
    android:background="@drawable/background"
tools:showIn="@layout/activity_home" tools:context=".Home">

<TextView android:text="Agenda de Peladas" android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/labelTitle"
    android:fontFamily="@string/app_name"
    style="@style/TextAppearance.AppCompat.Title"
    android:layout_alignParentTop="true"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
    android:layout_marginTop="27dp"
    android:textSize="35dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cadastrar jogo"
        android:id="@+id/btCadstrar"
        android:layout_marginTop="124dp"
        android:layout_below="@+id/labelTitle"
        android:layout_alignRight="@+id/labelTitle"
        android:layout_alignEnd="@+id/labelTitle" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Buscar"
        android:id="@+id/btBuscar"
        android:layout_below="@+id/btCadstrar"
        android:layout_alignLeft="@+id/btCadstrar"
        android:layout_alignStart="@+id/btCadstrar"
        android:layout_alignRight="@+id/btCadstrar"
        android:layout_alignEnd="@+id/btCadstrar" />

</RelativeLayout>
