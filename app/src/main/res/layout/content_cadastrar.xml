<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    android:background="@drawable/background"
    tools:showIn="@layout/activity_cadastrar"
    tools:context="com.example.mariana.agendadepeladas.Cadastrar">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/eTHora"
        android:width="250px"
        android:layout_below="@+id/labelCadastrarJogo"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="56dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cadastrar Jogo"
        android:id="@+id/labelCadastrarJogo"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="27dp"
        style="@style/TextAppearance.AppCompat.Title"
        android:textSize="35dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hora"
        android:id="@+id/tvHora"
        android:textSize="25dp"
        android:textColor="#000000"
        android:layout_above="@+id/eTLocal"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Local"
        android:id="@+id/tvLocal"
        android:textSize="25dp"
        android:textColor="#000000"
        android:layout_alignBottom="@+id/eTLocal"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/eTLocal"
        android:width="250px"
        android:layout_below="@+id/eTHora"
        android:layout_alignParentRight="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Valor"
        android:id="@+id/tvValor"
        android:textSize="25dp"
        android:textColor="#000000"
        android:layout_above="@+id/btContatos"
        android:layout_alignLeft="@+id/tvLocal"
        android:layout_alignStart="@+id/tvLocal" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText"
        android:layout_below="@+id/eTLocal"
        android:layout_alignParentRight="true"
        android:layout_toEndOf="@+id/labelCadastrarJogo"
        android:layout_alignLeft="@+id/eTLocal"
        android:layout_alignStart="@+id/eTLocal" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Contatos"
        android:id="@+id/btContatos"
        android:layout_below="@+id/editText"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
